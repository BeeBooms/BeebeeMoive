<%- include("../partials/header.ejs") %>

<section class="py-5 text-center container">
    <div class="row py-lg-5">
      <div class="col-lg-6 col-md-8 mx-auto">
        <h1 class="head-index">Welcome to BeeBeeMovie</h1>
        <p class="lead head-title">Good luck have fun</p>
        <p>
          <% if (currentUser && currentUser.isAdmin === true) { %>
          <a href="/prints/new" class="btn btn-primary my-2 head-btn">Add new Movie</a>
          <% } %>
        </p>
      </div>
    </div>
  </section>

  <div class="album py-5 ">
    <div class="container-fluid">

      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 g-3">
      <% prints.forEach(function(prints){ %>
        <div class="col">
          <div class="card shadow-sm movie">
            <img src="<%= prints.image %>" height="600px" class="index-image">
            <div class="card-body">
              <p class="card-text movie-text">Name Movie: <%= prints.name %></p>
              <p class="card-text movie-text">Date: <%= prints.date %></p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <a href="/prints/<%= prints._id %>" class="btn btn-sm btn-outline-secondary movie-btn">View</a>
                </div>
              </div>
            </div>
          </div>
        </div>
        <% }); %> 
      </div>
    </div>
  </div>

<%- include("../partials/footer.ejs") %>