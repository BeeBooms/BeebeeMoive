<%- include("partials/header.ejs") %>
<div class="login-container">
	<div class="row">
		<div class="col-sm">
			<img src="images/lg.jpg" class="login-logo">
		</div>
		<div class="col-sm">
			<h1 class="login-header">Sign In</h1>
			<form action="/login" method="POST">
				<div class="login-field mb-3">
					<label class="login-detail form-label">Username or E-mail</label>
					<input type="text" class="login-form form-control" name="username" placeholder="Username" required>
				</div>
				<div class="login-field mb-3">
					<label class="login-detail form-label">Password</label>
					<input type="password" class="login-form form-control" name="password" placeholder="Password" required>
				</div>
				<div class="login-helper">
					<a class="login-helper-menu" href="/register">Don't have an account?</a>
				</div>
				<button type="submit" class="login-btn btn btn-temp">Login</button>
			</form>
		</div>

<%- include("partials/footer.ejs") %>