<%- include("../partials/header.ejs") %>
<div class="container add-comment">
<h1 class="add-header">Edit your comment</h1>
<form action="/prints/<%= print_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
<div class="mb-3">
    <label class="form-label add-detail">Comment</label>
    <input type="text" class="form-control" name="comment[text]" placeholder="<%= comment.text %>" value = "<%= comment.text %>">
</div>
<button type="submit" class="btn btn-primary btn-add">Submit</button>
<a href="/prints/<%= print_id %>">Go back</a>
</form>
</div>

